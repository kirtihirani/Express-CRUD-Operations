<!--include header-->
<%- include('include/_header') %>
<!-- /include header -->

<!-- main section -->

<div class="container">
    <a href="/" type="button" class="btn btn-outline-dark btn-lg my-5">All Users</a>
    <form method="POST" action="/update-user/<%=docs._id %>">
        <div class="form-group">
          <label for="exampleInputEmail1">Name</label>
          <input type="text" class="form-control my-3" value="<%=docs.name %>" name="name" id="name"  placeholder="Enter Name">
          </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Email</label>
          <input type="email" class="form-control my-3" value="<%=docs.email %>" name="email" id="email" placeholder="Enter Email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control my-3" value="<%=docs.password %>" id="password" name="password" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Role</label>
            <select class="form-select my-3" aria-label="Default select example">
                <option selected><%=docs.role %></option>
                <option value="manager">Manager</option>
                <option value="teamlead">Team Lead</option>
                <option value="scrummaster">Scrum Master</option>
            </select>
        </div>
        
        <button type="submit" class="btn btn-dark btn-lg my-3">Save</button>
      </form>
</div>

<!-- /main section -->

<!--include footer-->
<%- include('include/_footer') %>
<!-- /include footer -->